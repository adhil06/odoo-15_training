<odoo>
    <data>
        <record id="excel_creation" model="ir.ui.view">
            <field name="name">excel.creation</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale_management.sale_order_form_quote"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='sale_order_template_id']" position="after">      
                    <field name="is_player" string="Player"/>    
                </xpath>
            </field>
        </record>
        <record id="excel_report_action" model="ir.actions.act_window">
            <field name="name">excel.report.action</field>
            <field name="res_model">sale.order</field>
            <!-- <field name="type">ir.actions.act.window</field> -->
            <field name="view_mode">list,form</field>
        </record>

        <menuitem
            action="excel_report_action"
            id="excel_report_sub_menu"
            name="sales report"
            parent="sale.sale_order_menu"
            sequence="1"/>
    </data>
    
</odoo>